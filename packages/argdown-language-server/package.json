{
  "name": "@argdown/language-server",
  "description": "Language Server for the Argdown argumentation syntax.",
  "version": "1.7.0",
  "author": "Christian Voigt",
  "license": "MIT",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-language-server"
  },
  "scripts": {
    "build": "npm run build-webpack",
    "build-ts": "tsc -p .",
    "build-webpack": "npm run clean && webpack --config webpack.config.js --mode production",
    "clean": "rimraf \"dist/*\"",
    "watch": "tsc -w -p .",
    "prepublishOnly": "npm run build",
    "test": "mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts"
  },
  "devDependencies": {
    "@argdown/core": "^1.7.0",
    "@argdown/node": "^1.7.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.14.0",
    "@types/webpack": "^4.41.23",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "string-replace-loader": "3.0.1",
    "style-loader": "^2.0.0",
    "transform-loader": "^0.2.4",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "vscode-languageserver": "7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "3.0.2",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  }
}
