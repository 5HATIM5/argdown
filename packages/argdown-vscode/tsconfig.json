{
  "compilerOptions": {
    "newLine": "LF",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6", "es2015.promise", "dom"],
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
