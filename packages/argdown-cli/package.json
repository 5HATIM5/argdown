{
  "name": "@argdown/cli",
  "description": "A command line interface for exporting Argdown files to html, dot or json.",
  "keywords": [
    "argumentation",
    "argument mapping",
    "Argdown",
    "Markdown"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "version": "1.3.0",
  "license": "MIT",
  "main": "dist/src/cli.js",
  "dependencies": {
    "@argdown/core": "^1.3.0",
    "@argdown/markdown-it-plugin": "^1.3.0",
    "@argdown/node": "^1.3.0",
    "@types/markdown-it": "^10.0.1",
    "@types/yargs": "^15.0.4",
    "markdown-it": "^10.0.0",
    "pkginfo": "^0.4.1",
    "yargs": "^15.3.1"
  },
  "bin": {
    "argdown": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-cli"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "scripts": {
    "deploy": "npm run version:patch && git push --tags origin HEAD:master",
    "build": "npm run clean && npm run build:src",
    "build:src": "tsc",
    "test": "npm run build && mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts",
    "test:custom-process": "mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts --fgrep \"custom process\"",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "prepublishOnly": "npm run-script build",
    "clean": "rimraf \"dist/*\"",
    "version:patch": "npm version patch"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-fs": "^2.0.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "@types/rimraf": "^3.0.0",
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "copyfiles": "^2.2.0",
    "cpx": "^1.5.0",
    "glob": "^7.1.6",
    "intercept-stdout": "^0.1.2",
    "mkdirp": "^1.0.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3",
    "typescript-workspace-plugin": "^2.0.1"
  },
  "nyc": {
    "include": [
      "dist/src/**/*.js",
      "dist/src/**/*.jsx"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
