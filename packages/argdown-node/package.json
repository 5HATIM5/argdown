{
  "name": "@argdown/node",
  "version": "1.3.0",
  "description": "Async Argdown application for node.js",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "deploy": "npm run test && npm run build && npm version patch && npm run push",
    "type-check": "tsc --noEmit",
    "build": "npm run clean && npm run build:src && npm run copy-pdfkit",
    "build:src": "tsc",
    "docs:build": "node ./node_modules/typedoc/bin/typedoc",
    "copy-pdfkit": "copyfiles src/pdfkit.js dist",
    "test": "mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "clean": "rimraf \"dist/*\"",
    "prepublishOnly": "npm run-script build",
    "push": "git push --tags origin HEAD:master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-node"
  },
  "keywords": [
    "Argdown"
  ],
  "author": "Christian Voigt",
  "license": "MIT",
  "dependencies": {
    "@argdown/core": "^1.3.0",
    "@argdown/prism": "^1.3.0",
    "@babel/polyfill": "^7.8.7",
    "@types/chokidar": "^2.1.3",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.5",
    "chokidar": "^3.3.1",
    "glob": "^7.1.6",
    "import-fresh": "^3.2.1",
    "lodash": "^4.17.15",
    "mkdirp": "^1.0.3",
    "prismjs": "^1.19.0",
    "svg-to-pdfkit": "^0.1.8",
    "viz.js": "^2.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/prismjs": "^1.16.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.2.0",
    "intercept-stdout": "^0.1.2",
    "mkdirp": "^1.0.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3",
    "typescript-workspace-plugin": "^2.0.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
