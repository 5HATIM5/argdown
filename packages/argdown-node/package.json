{
    "name": "@argdown/node",
    "version": "1.1.0",
    "description": "Async Argdown application for node.js",
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "engines": {
        "node": ">= 8.0.0"
    },
    "scripts": {
        "deploy": "npm run test && npm run build && npm version patch && npm run push",
        "type-check": "tsc --noEmit",
        "build": "npm run clean && npm run build:src && npm run copy-pdfkit",
        "build:src": "tsc",
        "docs:build": "typedoc  --options ./typedoc.js",
        "copy-pdfkit": "copyfiles src/pdfkit.js dist",
        "test": "mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
        "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
        "report": "nyc report",
        "clean": "rimraf \"dist/*\"",
        "prepublishOnly": "npm run-script build",
        "push": "git push --tags origin HEAD:master"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/christianvoigt/argdown/tree/master/packages/argdown-node"
    },
    "keywords": [
        "Argdown"
    ],
    "author": "Christian Voigt",
    "license": "MIT",
    "dependencies": {
        "@argdown/core": "^1.1.0",
        "@babel/polyfill": "^7.6.0",
        "@types/chokidar": "^2.1.3",
        "@types/glob": "^7.1.1",
        "@types/lodash": "^4.14.139",
        "@types/node": "^12.7.8",
        "chokidar": "^3.1.1",
        "glob": "^7.1.4",
        "import-fresh": "^3.1.0",
        "lodash": "^4.17.15",
        "mkdirp": "^0.5.1",
        "svg-to-pdfkit": "^0.1.7",
        "viz.js": "^2.1.2"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/chai": "^4.2.3",
        "chai": "^4.2.0",
        "copyfiles": "^2.1.1",
        "intercept-stdout": "^0.1.2",
        "mkdirp": "^0.5.1",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "rimraf": "^3.0.0",
        "source-map-support": "^0.5.13",
        "ts-node": "^8.4.1",
        "typedoc": "^0.15.0",
        "typescript": "^3.6.3",
        "typescript-workspace-plugin": "^2.0.1"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    }
}
